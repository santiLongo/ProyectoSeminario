{
  "openapi": "3.0.1",
  "info": {
    "title": "Seminario.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/v1/login/auth": {
      "post": {
        "tags": [
          "Login"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AuthCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthCommand": {
        "required": [
          "mail",
          "password"
        ],
        "type": "object",
        "properties": {
          "mail": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "password": {
            "maxLength": 30,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "mail": {
            "type": "string",
            "nullable": true
          },
          "token": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}